@model IEnumerable<CartFigureViewModel>

@{
    ViewData["Title"] = "View Shopping Cart";
}

<h1>Summary</h1>

@if (Model.Count() == 0)
{
    <h2>Your Cart Is Empty</h2>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Legion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) 
    {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Legion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="Remove" asp-route-id="@item.FigureId">Remove Item</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}

