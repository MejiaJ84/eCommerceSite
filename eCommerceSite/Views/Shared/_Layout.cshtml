@inject IHttpContextAccessor _httpContext

@{
    string? userEmail = _httpContext.HttpContext.Session.GetString("Email");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Go Figure</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/eCommerceSite.styles.css" asp-append-version="true" />
</head>
<body>
    
    
    <button class="btn btn-dark" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
        Navigation
    </button>

    <div class="offcanvas offcanvas-top" data-bs-scroll="true" tabindex="-1" id="offcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">
        <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasWithBothOptionsLabel">Go Figure!</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
        <div class="card">
          <div class="card-header">
            A Space Marine's Oath
          </div>
          <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p>
                    <i>What is your life?</i> <strong>My honor is my life.</strong>
                    <i>What is your fate?</i> <strong>My duty is my fate.</strong>
                    <i>What is your fear?</i> <strong>My fear is to fail.</strong>
                    <i>What is your reward?</i> <strong>My salvation is my reward.</strong>
                    <i>What is your craft?</i> <strong>My craft is death.</strong>
                    <i>What is your pledge?</i> <strong>My pledge is eternal service.</strong>
                </p>
                <footer class="blockquote-footer">-<cite title="Source Title">The Astartes Pledge</cite></footer>
              </blockquote>
          </div>
        </div>
        <div class="dropdown mt-3">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown">
            Site Navigation
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
            <li><a class="dropdown-item" asp-area="" asp-controller="Figures" asp-action="Index">Figure Catalog</a></li>
            @if (userEmail == null)
            {
                <li><a class="dropdown-item" asp-area="" asp-controller="Members" asp-action="Register">Register</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Members" asp-action="Login">Log In</a></li>
            }
            </ul>
        </div>
        
        </div>
    </div>
    
    <div class="container">
        <main role="main" class="pb-3">
            @if (userEmail != null)
            {
                <h3>Welcome @userEmail</h3>
            }
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - Go Figure - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



